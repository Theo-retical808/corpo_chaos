<Window x:Class="CorporateChaos.Views.ExecutiveDecisions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Executive Strategic Decisions" Height="700" Width="1000" 
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#1a1a2e">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <Grid>
                <Button x:Name="CloseBtn" Content="âœ•" Width="30" Height="30" 
                        HorizontalAlignment="Left" VerticalAlignment="Top"
                        Click="CloseBtn_Click" Background="#4d2a2a" Foreground="White"
                        FontWeight="Bold" FontSize="14"/>
                
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="ðŸŽ¯ EXECUTIVE STRATEGIC DECISIONS" FontSize="20" FontWeight="Bold" 
                              Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock x:Name="CompanyStatusText" Text="Make strategic decisions to improve company performance" 
                              FontSize="12" Foreground="LightGray" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </StackPanel>
        
        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Financial Decisions -->
                <Border Grid.Column="0" Background="#16213e" CornerRadius="10" Padding="15" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ’° FINANCIAL DECISIONS" FontSize="16" FontWeight="Bold" 
                                  Foreground="White" Margin="0,0,0,15"/>
                        
                        <!-- Cost Cutting -->
                        <Border Background="#2a2a4d" CornerRadius="8" Padding="12" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="âœ‚ï¸ Cost Cutting Measures" FontSize="14" FontWeight="Bold" 
                                          Foreground="White" Margin="0,0,0,5"/>
                                <TextBlock Text="Reduce operational expenses by 15-25%" FontSize="11" 
                                          Foreground="LightGray" Margin="0,0,0,5"/>
                                <TextBlock Text="âš ï¸ Impact: +Profit, -Morale, +Risk" FontSize="10" 
                                          Foreground="Orange" Margin="0,0,0,10"/>
                                
                                <StackPanel Orientation="Horizontal">
                                    <Button x:Name="CostCuttingLightBtn" Content="Light (5%)" Width="80" Height="30" 
                                           Margin="0,0,5,0" Click="CostCuttingLight_Click" Background="#4d2a2a"/>
                                    <Button x:Name="CostCuttingMediumBtn" Content="Medium (15%)" Width="90" Height="30" 
                                           Margin="0,0,5,0" Click="CostCuttingMedium_Click" Background="#4d2a2a"/>
                                    <Button x:Name="CostCuttingHeavyBtn" Content="Heavy (25%)" Width="80" Height="30" 
                                           Click="CostCuttingHeavy_Click" Background="#4d2a2a"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                        <!-- Employee Bonuses -->
                        <Border Background="#2a2a4d" CornerRadius="8" Padding="12" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="ðŸŽ Employee Bonuses" FontSize="14" FontWeight="Bold" 
                                          Foreground="White" Margin="0,0,0,5"/>
                                <TextBlock Text="Boost morale with performance bonuses" FontSize="11" 
                                          Foreground="LightGray" Margin="0,0,0,5"/>
                                <TextBlock Text="âš ï¸ Impact: -Capital, +Morale, +Productivity" FontSize="10" 
                                          Foreground="Orange" Margin="0,0,0,10"/>
                                
                                <StackPanel Orientation="Horizontal">
                                    <Button x:Name="BonusSmallBtn" Content="Small ($50K)" Width="90" Height="30" 
                                           Margin="0,0,5,0" Click="BonusSmall_Click" Background="#2a4d3a"/>
                                    <Button x:Name="BonusLargeBtn" Content="Large ($150K)" Width="90" Height="30" 
                                           Click="BonusLarge_Click" Background="#2a4d3a"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                        <!-- Emergency Fund -->
                        <Border Background="#2a2a4d" CornerRadius="8" Padding="12" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="ðŸ¦ Emergency Loan" FontSize="14" FontWeight="Bold" 
                                          Foreground="White" Margin="0,0,0,5"/>
                                <TextBlock Text="Take emergency loan to avoid bankruptcy" FontSize="11" 
                                          Foreground="LightGray" Margin="0,0,0,5"/>
                                <TextBlock Text="âš ï¸ Impact: +Capital, +Risk, -Reputation" FontSize="10" 
                                          Foreground="Orange" Margin="0,0,0,10"/>
                                
                                <Button x:Name="EmergencyLoanBtn" Content="Take Loan ($200K)" Width="140" Height="30" 
                                       Click="EmergencyLoan_Click" Background="#4d4d2a"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
                
                <!-- Strategic Decisions -->
                <Border Grid.Column="1" Background="#16213e" CornerRadius="10" Padding="15" Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ“ˆ STRATEGIC DECISIONS" FontSize="16" FontWeight="Bold" 
                                  Foreground="White" Margin="0,0,0,15"/>
                        
                        <!-- Marketing Campaign -->
                        <Border Background="#2a2a4d" CornerRadius="8" Padding="12" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="ðŸ“¢ Marketing Campaign" FontSize="14" FontWeight="Bold" 
                                          Foreground="White" Margin="0,0,0,5"/>
                                <TextBlock Text="Boost reputation and market share" FontSize="11" 
                                          Foreground="LightGray" Margin="0,0,0,5"/>
                                <TextBlock Text="âš ï¸ Impact: -Capital, +Reputation, +Market Share, +Risk" FontSize="10" 
                                          Foreground="Orange" Margin="0,0,0,10"/>
                                
                                <StackPanel Orientation="Horizontal">
                                    <Button x:Name="MarketingLocalBtn" Content="Local ($75K)" Width="90" Height="30" 
                                           Margin="0,0,5,0" Click="MarketingLocal_Click" Background="#2a4d4d"/>
                                    <Button x:Name="MarketingNationalBtn" Content="National ($200K)" Width="100" Height="30" 
                                           Click="MarketingNational_Click" Background="#2a4d4d"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                        <!-- Company Retreat -->
                        <Border Background="#2a2a4d" CornerRadius="8" Padding="12" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="ðŸ–ï¸ Company Retreat" FontSize="14" FontWeight="Bold" 
                                          Foreground="White" Margin="0,0,0,5"/>
                                <TextBlock Text="Team building and morale boost" FontSize="11" 
                                          Foreground="LightGray" Margin="0,0,0,5"/>
                                <TextBlock Text="âš ï¸ Impact: -Capital, +Morale, +Productivity, -Risk" FontSize="10" 
                                          Foreground="Orange" Margin="0,0,0,10"/>
                                
                                <StackPanel Orientation="Horizontal">
                                    <Button x:Name="RetreatWeekendBtn" Content="Weekend ($30K)" Width="100" Height="30" 
                                           Margin="0,0,5,0" Click="RetreatWeekend_Click" Background="#2a4d3a"/>
                                    <Button x:Name="RetreatWeekBtn" Content="Week ($80K)" Width="80" Height="30" 
                                           Click="RetreatWeek_Click" Background="#2a4d3a"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                        <!-- R&D Investment -->
                        <Border Background="#2a2a4d" CornerRadius="8" Padding="12" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="ðŸ”¬ R&amp;D Investment" FontSize="14" FontWeight="Bold" 
                                          Foreground="White" Margin="0,0,0,5"/>
                                <TextBlock Text="Invest in innovation and future growth" FontSize="11" 
                                          Foreground="LightGray" Margin="0,0,0,5"/>
                                <TextBlock Text="âš ï¸ Impact: -Capital, +Market Share, +Reputation, +Risk" FontSize="10" 
                                          Foreground="Orange" Margin="0,0,0,10"/>
                                
                                <Button x:Name="RDInvestmentBtn" Content="Major Investment ($120K)" Width="160" Height="30" 
                                       Click="RDInvestment_Click" Background="#4d2a4d"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Crisis Management -->
                        <Border Background="#2a2a4d" CornerRadius="8" Padding="12" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="ðŸš¨ Crisis Management" FontSize="14" FontWeight="Bold" 
                                          Foreground="White" Margin="0,0,0,5"/>
                                <TextBlock Text="Hire consultants to manage ongoing crises" FontSize="11" 
                                          Foreground="LightGray" Margin="0,0,0,5"/>
                                <TextBlock Text="âš ï¸ Impact: -Capital, -Risk, +Reputation" FontSize="10" 
                                          Foreground="Orange" Margin="0,0,0,10"/>
                                
                                <Button x:Name="CrisisManagementBtn" Content="Hire Consultants ($100K)" Width="170" Height="30" 
                                       Click="CrisisManagement_Click" Background="#4d3a2a"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
        
        <!-- Department Budget Allocation -->
        <Border Grid.Row="2" Background="#16213e" CornerRadius="10" Padding="15" Margin="0,20,0,0">
            <StackPanel>
                <TextBlock Text="ðŸ“Š DEPARTMENT BUDGET ALLOCATION" FontSize="16" FontWeight="Bold" 
                          Foreground="White" Margin="0,0,0,15"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Department Budget Sliders -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="ðŸ“¢ Marketing" FontSize="12" Foreground="White" HorizontalAlignment="Center"/>
                        <Slider x:Name="MarketingBudgetSlider" Minimum="0" Maximum="40" Value="15" 
                               TickFrequency="5" IsSnapToTickEnabled="True" Orientation="Vertical" 
                               Height="80" HorizontalAlignment="Center" Margin="0,5,0,5"/>
                        <TextBlock x:Name="MarketingBudgetText" Text="15%" FontSize="10" 
                                  Foreground="LightGray" HorizontalAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Margin="0,0,10,0">
                        <TextBlock Text="âš™ï¸ Operations" FontSize="12" Foreground="White" HorizontalAlignment="Center"/>
                        <Slider x:Name="OperationsBudgetSlider" Minimum="0" Maximum="40" Value="20" 
                               TickFrequency="5" IsSnapToTickEnabled="True" Orientation="Vertical" 
                               Height="80" HorizontalAlignment="Center" Margin="0,5,0,5"/>
                        <TextBlock x:Name="OperationsBudgetText" Text="20%" FontSize="10" 
                                  Foreground="LightGray" HorizontalAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2" Margin="0,0,10,0">
                        <TextBlock Text="ðŸ’° Finance" FontSize="12" Foreground="White" HorizontalAlignment="Center"/>
                        <Slider x:Name="FinanceBudgetSlider" Minimum="0" Maximum="40" Value="15" 
                               TickFrequency="5" IsSnapToTickEnabled="True" Orientation="Vertical" 
                               Height="80" HorizontalAlignment="Center" Margin="0,5,0,5"/>
                        <TextBlock x:Name="FinanceBudgetText" Text="15%" FontSize="10" 
                                  Foreground="LightGray" HorizontalAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="3" Margin="0,0,10,0">
                        <TextBlock Text="ðŸ‘¥ HR" FontSize="12" Foreground="White" HorizontalAlignment="Center"/>
                        <Slider x:Name="HRBudgetSlider" Minimum="0" Maximum="40" Value="10" 
                               TickFrequency="5" IsSnapToTickEnabled="True" Orientation="Vertical" 
                               Height="80" HorizontalAlignment="Center" Margin="0,5,0,5"/>
                        <TextBlock x:Name="HRBudgetText" Text="10%" FontSize="10" 
                                  Foreground="LightGray" HorizontalAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="4" Margin="0,0,10,0">
                        <TextBlock Text="ðŸ’» IT" FontSize="12" Foreground="White" HorizontalAlignment="Center"/>
                        <Slider x:Name="ITBudgetSlider" Minimum="0" Maximum="40" Value="20" 
                               TickFrequency="5" IsSnapToTickEnabled="True" Orientation="Vertical" 
                               Height="80" HorizontalAlignment="Center" Margin="0,5,0,5"/>
                        <TextBlock x:Name="ITBudgetText" Text="20%" FontSize="10" 
                                  Foreground="LightGray" HorizontalAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="5" Margin="0,0,10,0">
                        <TextBlock Text="ðŸ”¬ Research" FontSize="12" Foreground="White" HorizontalAlignment="Center"/>
                        <Slider x:Name="ResearchBudgetSlider" Minimum="0" Maximum="40" Value="20" 
                               TickFrequency="5" IsSnapToTickEnabled="True" Orientation="Vertical" 
                               Height="80" HorizontalAlignment="Center" Margin="0,5,0,5"/>
                        <TextBlock x:Name="ResearchBudgetText" Text="20%" FontSize="10" 
                                  Foreground="LightGray" HorizontalAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="6" VerticalAlignment="Center">
                        <TextBlock x:Name="TotalBudgetText" Text="Total: 100%" FontSize="12" FontWeight="Bold" 
                                  Foreground="White" Margin="10,0,0,10"/>
                        <Button x:Name="ApplyBudgetBtn" Content="Apply Budget" Width="100" Height="35" 
                               Click="ApplyBudget_Click" Background="#2a4d3a"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>