<Window x:Class="CorporateChaos.Views.HighScoresWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="High Scores - Corporate Chaos" Height="600" Width="1000" 
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize"
        Background="#1a1a2e">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="ðŸ† HIGH SCORES - PEAK PERFORMANCE" FontSize="28" FontWeight="Bold" 
                       Foreground="White" HorizontalAlignment="Center"/>
            <TextBlock Text="Scores based on your highest achievements during the run" FontSize="14" 
                       Foreground="Gray" HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>
        
        <Border Grid.Row="1" Background="#16213e" CornerRadius="10" Padding="15">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <DataGrid x:Name="HighScoresDataGrid" AutoGenerateColumns="False" 
                          Background="Transparent" Foreground="White" 
                          GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                          CanUserAddRows="False" CanUserDeleteRows="False" 
                          CanUserReorderColumns="False" CanUserResizeRows="False"
                          IsReadOnly="True">
                    
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#0f3460"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Padding" Value="8,5"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2a2a4e"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                    
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="5,3"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGrid.CellStyle>
                    
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Rank" Binding="{Binding Rank}" Width="50"/>
                        <DataGridTextColumn Header="Player" Binding="{Binding Nickname}" Width="100"/>
                        <DataGridTextColumn Header="Score" Binding="{Binding Score, StringFormat=N0}" Width="80"/>
                        <DataGridTextColumn Header="Peak Capital" Binding="{Binding PeakCapital, StringFormat=C0}" Width="100"/>
                        <DataGridTextColumn Header="Peak Revenue" Binding="{Binding PeakRevenue, StringFormat=C0}" Width="100"/>
                        <DataGridTextColumn Header="Peak Profit" Binding="{Binding PeakProfit, StringFormat=C0}" Width="100"/>
                        <DataGridTextColumn Header="Peak Market %" Binding="{Binding PeakMarketShare, StringFormat=F1}" Width="90"/>
                        <DataGridTextColumn Header="Peak Staff" Binding="{Binding PeakEmployees}" Width="70"/>
                        <DataGridTextColumn Header="Quarters" Binding="{Binding QuartersPlayed}" Width="70"/>
                        <DataGridTextColumn Header="End Reason" Binding="{Binding EndReason}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
        </Border>
        
        <Button Grid.Row="2" Content="Close" Width="100" Height="35" 
                HorizontalAlignment="Center" Margin="0,20,0,0" 
                Click="CloseButton_Click"/>
    </Grid>
</Window>