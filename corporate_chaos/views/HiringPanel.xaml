<Window x:Class="CorporateChaos.Views.HiringPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Employee Hiring Panel" Height="600" Width="800" 
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#1a1a2e">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸ‘¥ EMPLOYEE HIRING PANEL" FontSize="20" FontWeight="Bold" 
                      Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock x:Name="HiringInfoText" Text="Candidate experience levels depend on game progression and company reputation" 
                      FontSize="12" Foreground="LightGray" HorizontalAlignment="Center"/>
            <TextBlock x:Name="TipTextBlock" Text="ðŸ’¡ Tip: Match candidate skills to department needs for optimal performance" 
                      FontSize="11" Foreground="LightBlue" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            <TextBlock x:Name="RefreshLimitText" Text="âš ï¸ You can refresh the candidate list up to 5 times per quarter" 
                      FontSize="10" Foreground="Orange" HorizontalAlignment="Center" Margin="0,3,0,0"/>
        </StackPanel>
        
        <!-- Available Candidates List -->
        <Border Grid.Row="1" Background="#16213e" CornerRadius="10" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="ðŸ“‹ Available Candidates" FontSize="16" FontWeight="Bold" 
                          Foreground="White" Margin="0,0,0,15"/>
                
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="CandidatesItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#2a2a4d" CornerRadius="8" Margin="0,0,0,10" Padding="15">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Candidate Info -->
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold" 
                                                      Foreground="White" Margin="0,0,0,5"/>
                                            
                                            <!-- Position Description -->
                                            <TextBlock Text="{Binding PositionDescription}" FontSize="12" 
                                                      Foreground="LightBlue" Margin="0,0,0,8" TextWrapping="Wrap"/>
                                            
                                            <!-- Skills Keywords -->
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                <TextBlock Text="ðŸ”§ Skills: " FontSize="11" Foreground="Gray"/>
                                                <ItemsControl ItemsSource="{Binding SkillKeywords}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel Orientation="Horizontal"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="#3a3a5d" CornerRadius="3" Margin="0,0,5,0" Padding="4,2">
                                                                <TextBlock Text="{Binding}" FontSize="10" Foreground="Yellow"/>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                            
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                                <TextBlock Text="ðŸ† Level: " FontSize="11" Foreground="Gray"/>
                                                <TextBlock Text="{Binding OverallSkill}" FontSize="11" Foreground="Yellow"/>
                                                <TextBlock Text=" | ðŸ“… Experience: " FontSize="11" Foreground="Gray" Margin="15,0,0,0"/>
                                                <TextBlock Text="{Binding Experience}" FontSize="11" Foreground="Cyan"/>
                                                <TextBlock Text=" years" FontSize="11" Foreground="Cyan"/>
                                            </StackPanel>
                                            
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                                <TextBlock Text="ðŸ“ˆ Productivity: " FontSize="11" Foreground="Gray"/>
                                                <TextBlock Text="{Binding Productivity}" FontSize="11" Foreground="LightGreen"/>
                                                <TextBlock Text=" | ðŸ’° Salary: $" FontSize="11" Foreground="Gray" Margin="15,0,0,0"/>
                                                <TextBlock Text="{Binding Salary, StringFormat=N0}" FontSize="11" Foreground="LightGreen"/>
                                                <TextBlock Text="/month" FontSize="11" Foreground="LightGreen"/>
                                            </StackPanel>
                                            
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="ðŸ˜Š Morale: " FontSize="11" Foreground="Gray"/>
                                                <TextBlock Text="{Binding Morale}" FontSize="11" Foreground="Pink"/>
                                                <TextBlock Text=" | âš ï¸ Risk: " FontSize="11" Foreground="Gray" Margin="15,0,0,0"/>
                                                <TextBlock Text="{Binding RiskLevel}" FontSize="11" Foreground="Orange"/>
                                            </StackPanel>
                                        </StackPanel>
                                        
                                        <!-- Action Buttons -->
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                            <Button Content="âœ… Hire" Width="70" Height="35" Margin="0,0,10,0"
                                                   Background="#2a4d3a" Foreground="White" BorderBrush="#4d7a5d"
                                                   Click="HireBtn_Click" Tag="{Binding}"/>
                                            <Button Content="âŒ Pass" Width="70" Height="35"
                                                   Background="#4d2a2a" Foreground="White" BorderBrush="#7a4d4d"
                                                   Click="PassBtn_Click" Tag="{Binding}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
        
        <!-- Bottom Controls -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="RefreshCandidatesBtn" Content="ðŸ”„ Refresh Candidates" Width="150" Height="40" 
                    Margin="0,0,20,0" Click="RefreshCandidatesBtn_Click"/>
            <Button x:Name="CloseBtn" Content="Close" Width="100" Height="40" 
                    Click="CloseBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>