<Window x:Class="CorporateChaos.Views.QuarterlySummary"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quarterly Summary" Height="500" Width="700" 
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#1a1a2e">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Button x:Name="CloseBtn" Content="âœ•" Width="30" Height="30" 
                    HorizontalAlignment="Left" VerticalAlignment="Top"
                    Click="CloseBtn_Click" Background="#4d2a2a" Foreground="White"
                    FontWeight="Bold" FontSize="14"/>
            
            <StackPanel HorizontalAlignment="Center">
                <TextBlock x:Name="QuarterTitleText" Text="ðŸ“Š QUARTERLY SUMMARY - Q1" FontSize="20" FontWeight="Bold" 
                          Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock Text="Review your company's performance and recent events" 
                          FontSize="12" Foreground="LightGray" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
        
        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Financial Performance -->
                <Border Background="#16213e" CornerRadius="10" Padding="12" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="ðŸ’° FINANCIAL PERFORMANCE" FontSize="14" FontWeight="Bold" 
                                  Foreground="White" Margin="0,0,0,10"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Revenue" FontSize="11" Foreground="Gray"/>
                                <TextBlock x:Name="RevenueText" Text="$0" FontSize="14" FontWeight="Bold" Foreground="LightGreen"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Expenses" FontSize="11" Foreground="Gray"/>
                                <TextBlock x:Name="ExpensesText" Text="$0" FontSize="14" FontWeight="Bold" Foreground="LightCoral"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Net Profit" FontSize="11" Foreground="Gray"/>
                                <TextBlock x:Name="NetProfitText" Text="$0" FontSize="14" FontWeight="Bold" Foreground="White"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- Company Metrics -->
                <Border Background="#16213e" CornerRadius="10" Padding="12" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="ðŸ“ˆ COMPANY METRICS" FontSize="14" FontWeight="Bold" 
                                  Foreground="White" Margin="0,0,0,10"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Capital" FontSize="11" Foreground="Gray"/>
                                <TextBlock x:Name="CapitalText" Text="$0" FontSize="12" FontWeight="Bold" Foreground="LightGreen"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Reputation" FontSize="11" Foreground="Gray"/>
                                <TextBlock x:Name="ReputationText" Text="0" FontSize="12" FontWeight="Bold" Foreground="Yellow"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Morale" FontSize="11" Foreground="Gray"/>
                                <TextBlock x:Name="MoraleText" Text="0" FontSize="12" FontWeight="Bold" Foreground="Pink"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="3">
                                <TextBlock Text="Risk" FontSize="11" Foreground="Gray"/>
                                <TextBlock x:Name="RiskText" Text="0" FontSize="12" FontWeight="Bold" Foreground="Orange"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- Recent Events -->
                <Border Background="#16213e" CornerRadius="10" Padding="12">
                    <StackPanel>
                        <TextBlock Text="ðŸ“° RECENT EVENTS" FontSize="14" FontWeight="Bold" 
                                  Foreground="White" Margin="0,0,0,10"/>
                        
                        <ScrollViewer Height="150" VerticalScrollBarVisibility="Auto">
                            <TextBlock x:Name="EventsText" Text="No events this quarter." 
                                      FontSize="10" Foreground="White" TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Bottom Info -->
        <TextBlock Grid.Row="2" Text="ðŸ’¡ Tip: Click 'Current Events' button to review this summary anytime" 
                  FontSize="11" Foreground="Gray" HorizontalAlignment="Center" Margin="0,15,0,0"/>
    </Grid>
</Window>