<Window x:Class="CorporateChaos.Views.NicknameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Your Nickname" Height="250" Width="400" 
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#1a1a2e">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="ðŸŽ¯ Game Over!" FontSize="24" FontWeight="Bold" 
                   Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,10"/>
        
        <TextBlock Grid.Row="1" x:Name="ScoreText" Text="Your Score: 0" FontSize="16" 
                   Foreground="LightBlue" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        <TextBlock Grid.Row="2" Text="Enter your nickname for the leaderboard:" FontSize="14" 
                   Foreground="White" Margin="0,0,0,10"/>
        
        <TextBox Grid.Row="3" x:Name="NicknameTextBox" FontSize="16" Height="35" 
                 MaxLength="20" Margin="0,0,0,20" 
                 KeyDown="NicknameTextBox_KeyDown"/>
        
        <TextBlock Grid.Row="4" x:Name="ValidationText" Text="" FontSize="12" 
                   Foreground="Orange" Margin="0,0,0,10" TextWrapping="Wrap"/>
        
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="OkButton" Content="Save Score" Width="100" Height="35" 
                    Margin="0,0,10,0" Click="OkButton_Click" IsDefault="True"/>
            <Button x:Name="CancelButton" Content="Skip" Width="100" Height="35" 
                    Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>