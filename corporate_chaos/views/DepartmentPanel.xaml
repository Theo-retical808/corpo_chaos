<Window x:Class="CorporateChaos.Views.DepartmentPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Department Management" Height="700" Width="900" 
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#1a1a2e">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock x:Name="DepartmentTitleText" Text="ðŸ¢ DEPARTMENT MANAGEMENT" FontSize="20" FontWeight="Bold" 
                      Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock x:Name="DepartmentStatsText" Text="Department Statistics" 
                      FontSize="12" Foreground="LightGray" HorizontalAlignment="Center"/>
        </StackPanel>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Current Department Employees -->
            <Border Grid.Column="0" Background="#16213e" CornerRadius="10" Padding="15" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="ðŸ‘¥ Current Employees" FontSize="16" FontWeight="Bold" 
                              Foreground="White" Margin="0,0,0,15"/>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="DepartmentEmployeesItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#2a4d3a" CornerRadius="8" Margin="0,0,0,10" Padding="12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Employee Info -->
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="Bold" 
                                                          Foreground="White" Margin="0,0,0,3"/>
                                                
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                                    <TextBlock Text="ðŸ† " FontSize="10"/>
                                                    <TextBlock Text="{Binding OverallSkill}" FontSize="10" Foreground="Yellow"/>
                                                    <TextBlock Text=" | ðŸ“ˆ " FontSize="10" Margin="10,0,0,0"/>
                                                    <TextBlock Text="{Binding Productivity}" FontSize="10" Foreground="LightGreen"/>
                                                    <TextBlock Text=" | ðŸ˜Š " FontSize="10" Margin="10,0,0,0"/>
                                                    <TextBlock Text="{Binding Morale}" FontSize="10" Foreground="Pink"/>
                                                </StackPanel>
                                                
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="ðŸ’° $" FontSize="10" Foreground="Gray"/>
                                                    <TextBlock Text="{Binding Salary, StringFormat=N0}" FontSize="10" Foreground="LightGreen"/>
                                                    <TextBlock Text="/month" FontSize="10" Foreground="Gray"/>
                                                </StackPanel>
                                            </StackPanel>
                                            
                                            <!-- Action Button -->
                                            <Button Grid.Column="1" Content="ðŸ”„ Transfer" Width="70" Height="30"
                                                   Background="#4d2a4d" Foreground="White" BorderBrush="#7a4d7a"
                                                   Click="TransferBtn_Click" Tag="{Binding}" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
            
            <!-- Available Hired Employees -->
            <Border Grid.Column="1" Background="#16213e" CornerRadius="10" Padding="15" Margin="10,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="ðŸ“‹ Available Employees" FontSize="16" FontWeight="Bold" 
                              Foreground="White" Margin="0,0,0,15"/>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="AvailableEmployeesItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#2a2a4d" CornerRadius="8" Margin="0,0,0,10" Padding="12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Employee Info -->
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="Bold" 
                                                          Foreground="White" Margin="0,0,0,3"/>
                                                
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                                    <TextBlock Text="ðŸŽ¯ " FontSize="10"/>
                                                    <TextBlock Text="{Binding Specialization}" FontSize="10" Foreground="LightBlue"/>
                                                    <TextBlock Text=" | ðŸ† " FontSize="10" Margin="8,0,0,0"/>
                                                    <TextBlock Text="{Binding OverallSkill}" FontSize="10" Foreground="Yellow"/>
                                                </StackPanel>
                                                
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                                    <TextBlock Text="ðŸ“ˆ " FontSize="10"/>
                                                    <TextBlock Text="{Binding Productivity}" FontSize="10" Foreground="LightGreen"/>
                                                    <TextBlock Text=" | ðŸ˜Š " FontSize="10" Margin="10,0,0,0"/>
                                                    <TextBlock Text="{Binding Morale}" FontSize="10" Foreground="Pink"/>
                                                </StackPanel>
                                                
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="ðŸ’° $" FontSize="10" Foreground="Gray"/>
                                                    <TextBlock Text="{Binding Salary, StringFormat=N0}" FontSize="10" Foreground="LightGreen"/>
                                                    <TextBlock Text="/month" FontSize="10" Foreground="Gray"/>
                                                </StackPanel>
                                            </StackPanel>
                                            
                                            <!-- Action Button -->
                                            <Button Grid.Column="1" Content="âž• Assign" Width="70" Height="30"
                                                   Background="#2a4d3a" Foreground="White" BorderBrush="#4d7a5d"
                                                   Click="AssignBtn_Click" Tag="{Binding}" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Bottom Controls -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="CloseBtn" Content="Close" Width="100" Height="40" 
                    Click="CloseBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>